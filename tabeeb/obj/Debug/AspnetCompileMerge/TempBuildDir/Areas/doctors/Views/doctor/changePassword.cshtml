@model string
@{
    ViewBag.Title = Resource1.titleEnterusernameAndPassword;
    Layout = "~/Areas/doctors/Views/Shared/doctorLayout.cshtml";    
}
<div class="container">
    <p>@Resource1.changeYourPassword</p>
    <form method="post" action="changePassword" class="retrieveAccount">
        <div class="form-group">
            <p style="color:red">
                @if (ViewBag.error != "") { Write(ViewBag.error); }
            </p>
        </div>
        <div class="form-group">
            <label>
                @Resource1.newpassword
            </label>
            <input type="password" name="password" class="form-control" required
                   onblur='validateresetpassword(this)'
                   title="@Resource1.passwordValidation"/>
        </div>
        <div class="form-group">
            <label>
                @Resource1.confirmPassword
            </label>
            <input type="password" class="form-control" onkeyup="confirmPassword(this)" required />
            <span class="confirmPassValidationMessage"></span>
        </div>
        <input type="hidden" name="userID" value="@Model" />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                @Resource1.changeYourPassword <i class="fa fa-send"></i>
            </button>
        </div>
    </form>
</div>

