@model reservingRecord
@System.Web.Optimization.Scripts.Render("~/validationLinks")
<div class="modal fade" id="bookingForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="overlay hidden">
                <div class="center-block"><i class="fa fa-circle-o-notch fa-spin"></i></div>
            </div>
            <div class="modal-header">
                @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">×</span></button>*@
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("reservation", "reservation", FormMethod.Post, new { }))
                {
                    <div>@Resource1.enterBookingData</div>
                    <div class="errorMessage">

                    </div>
                    <div class="form-group">
                        <label><i class="fa fa-user"></i></label>
                        @Html.TextBoxFor(r => r.name, new { @class = "form-control",placeholder=Resource1.enterFullPatientName})  
                        @Html.ValidationMessageFor(r=>r.name)                    
                    </div>
                    <div class="form-group">
                        <label><i class="fa fa-mobile"></i></label>
                        @Html.TextBoxFor(r => r.phone, new { @class = "form-control",placeholder=Resource1.EnterPhoneNumber})  
                        @Html.ValidationMessageFor(r => r.phone)                           
                    </div>                     
                    <!--<div class="form-group hidden">
                        <input class="form-control" type="email" name="mail"  placeholder="البريد الالكترونى" title="ادخل بريد الكترونى صحيح" />
                        <i class="fa fa-envelope-o"></i>
                    </div>-->
                    <input id="appointementDate" type="hidden" name="appointementDate" />
                    <input id="interval" type="hidden" name="interval" />
                    <input id="docID" type="hidden" name="docID" />                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">@Resource1.reserveNow</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">@Resource1.close</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

