@model string
@{
    ViewBag.Title =Resource1.titleResertPassword;
    Layout = "~/Areas/doctors/Views/Shared/doctorLayout.cshtml";
    string mail =(Model!=null)? Model.Replace("%40", "@"):"";
}
<div class="container">
    @if (Model == null)
    {
        <h2 class="text-center pageheader">@Resource1.sendVerificationlink</h2>
        <form method="post" action="resetPassword" class="rememberPassword" autocomplete="off">
            <div class="form-group">
                <p style="color:red" class="rememberPasswordError">
                    @if (ViewBag.error != "") { Write(ViewBag.error); }
                </p>
            </div>
            <div class="form-group">
                <label>
                    @Resource1.enterusernameOrMailToregister
                </label>
                <input type="text" name="userNameOrEmail" id="userNameOrEmail" class="form-control" required autofocus />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-send"></i> @Resource1.reset_password
                </button>
            </div>
        </form>
    }
    else
    {
        <h2 class="text-center pageheader">@Resource1.sentLinkFirstHalf @mail,@Resource1.sentLinkSeconfHalf</h2>
        <h3>@Resource1.resetLinkHasNotBeenSent <a href="">@Resource1.pleaseTryAgain</a></h3>
    }
</div>