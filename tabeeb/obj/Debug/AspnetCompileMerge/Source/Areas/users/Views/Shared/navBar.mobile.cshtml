<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @if (Html.getCurrentlanguage() == "en")
            {
                <a class="navbar-lang" href="/@Html.getDefaultPathFor("users","language")/ar">العربية</a>
            }
            else
            {
                <a class="navbar-lang" href="/@Html.getDefaultPathFor("users","language")/en">English</a>
            }
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">@Resource1.home <span class="sr-only">(current)</span></a></li>
                <li class="subPage hidden" onclick="location.href = '/#ourServices'; handleLocations();"><a href="">@Resource1.ourServices</a></li>
                <li class="subPage" onclick="location.href = '/#aboutSelf';handleLocations();"><a href=''>@Resource1.areWe</a></li>
                <li class="subPage" onclick="location.href = '/#callUs'; handleLocations();"><a href="" class="callUsLink">@Resource1.callUs</a></li>
                <li><a target="_self" href="/@Html.getDefaultPathFor("doctors")">@Resource1.doctorSite</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Resource1.otherPages <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/@Html.getDefaultPathFor("users", "specialities")">@Resource1.Specialities</a></li>
                        <li><a href="/@Html.getDefaultPathFor("users", "search")">@Resource1.search</a></li>
                        <li><a href="/@Html.getDefaultPathFor("users", "advices")">@Resource1.doctorAdvices</a></li>
                        <li><a href="/privacy">@Resource1.privacy</a></li>
                        <!--<li role="separator" class="divider"></li>-->
                    </ul>
                </li>
            </ul>
            <form id="fast-search"
                  onsubmit="return validateGeneralSearchPattern(this, q.value)"
                  class="navbar-form navbar-left"
                  action="/@Html.getDefaultPathFor("users","search")/searchFor">
                <div class="form-group">
                    <input type="text"
                           class="form-control"
                           name="q"
                           placeholder="@Resource1.searchForDocOrSpByquichSearch">
                </div>
                <button id="submitSearch" type="submit" class="btn btn-default">
                    <i class="fa fa-search fa-lg"></i> @Resource1.search
                </button>
            </form>            
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>