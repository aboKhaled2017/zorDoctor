@model string
@{
    Page.Title = Resource1.titleChangePassword;
    Layout = Html.getUsersSiteLayout();  
}
<section class="login-section">
    <div class="login-box center-block">
        <h2>@Resource1.changeYourPassword</h2>
        <div class="login center-block">
            <form action="changePassword" method="post" class="retrieveAccount">
                <div class="form-group errorMessage">
                    <p style="color:red">
                        @if (ViewBag.error != "") { Write(ViewBag.error); }
                    </p>
                </div>
                <div class="form-group">
                    <label>
                       @Resource1.newPassword
                    </label>
                    <input type="password" name="password" class="form-control" required
                           onblur='validateresetpassword(this)'
                           title="password validation" />
                </div>
                <div class="form-group">
                    <label>
                        @Resource1.confirmPassword
                    </label>
                    <input type="password" class="form-control" onkeyup="confirmPassword(this)" required />
                    <span class="confirmPassValidationMessage"></span>
                </div>
                <input type="hidden" name="userID" value="@Model" />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        @Resource1.changePassword <i class="fa fa-send"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>


