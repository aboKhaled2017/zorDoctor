<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    @{HttpCookie mycookie = Request.Cookies[FormsAuthentication.FormsCookieName];
    FormsAuthenticationTicket ticket = FormsAuthentication.Decrypt(mycookie.Value);
    string userImage = ticket.UserData;
    }
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/bootstrap-ar.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/adminStyle.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/adminMediaStyle.css" rel="stylesheet" />
</head>
<body dir="rtl" onload="getStart('@ViewBag.controller')">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#myNave" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/users/index/index">طبيبك</a> 
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="myNave">
                <ul class="nav navbar-nav">
                    <li class="main"><a href="~/admin/index/Index">الصفحة الرئيسية<i class="fa fa-dashboard fa-lg"></i> <span class="sr-only">(current)</span></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/admin/doctor/doctor">الاطباء</a></li>
                    <li><a href="~/admin/patient/patient">المرضى</a></li>
                    <li><a href="~/admin/reserving/reserving">الحجوزات</a></li>
                    <li><a href="~/admin/admin/admin">المسؤليين</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">صفحات أخرى<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/admin/adv/adv">الاعلانات</a></li>
                            <li><a href="~/admin/complains/generalComplains">التعليقات العامة</a></li>
                            <li><a href="~/admin/complains/doctorComplains">شكاوى الاطباء</a></li>
                            <li><a href="~/admin/complains/patientComplains">شكاوى المرضى</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <img src="@userImage" class="profileImage img-responsive img-thumbnail img-circle" />
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.Name<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/users/index/index">أذهب للموقع الرئيسى</a></li>
                            <li><a href="~/admin/admin/myProfile">الصفحة الشخصية</a></li>
                            <li><a href="~/admin/account/logOut">تسجيل الخروج</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="bodyContent">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - حقوق الملكية لموقع طبيبم وفريق العمل</p>
    </footer>
    <script src="~/Areas/Admin/js/adminJS.js"></script>
    <script src="~/Areas/Admin/js/adminTable.js"></script>
    <script>
   
      
    </script>
</body>

</html>
