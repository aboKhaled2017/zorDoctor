@{
    ViewBag.Title = "Doctors page";
    Layout = "~/Areas/admin/Views/adminLayout.cshtml";
}

<h2 class="pageHeader">صفحة الاطباء</h2>;

<div class="container">
    @{Html.RenderPartial("pagingControl");}
    <div class="tableContainer">
        <div class="specifiedFilter specifiedFilterDate">
            <i class="fa fa-close"></i>
            <button class="order btn  btn-info" onclick="getSortedData(this,'dateOfJoin')">Order by date Asc</button>
            <label>get records of date</label>
            <input type="date" onchange="getDataBasedOn(this, 'dateOfJoin')" />
        </div>
        <div class="specifiedFilter specifiedFilterSpeciality">
            <i class="fa fa-close"></i>
            <select onchange="getDataBasedOn(this, parseInt($(this).find('option:selected').val().trim()))"></select>
        </div>
        <div class="specifiedFilter specifiedFilterName">
            <i class="fa fa-close"></i>
            <input type="text" placeholder="enter your search" onkeyup="getDataByNameSearch(this.value)" />
        </div>
        <table class=" table table-bordered table-hover table-responsive">
            <thead>
                <tr>
                    <th data-value='name' class="filter filterName">
                        الاسم
                    </th>
                    <th data-value='dateOfJoin' class="filter filterDate" style="position:relative">

                        تاريخ التسجيل
                    </th>
                    <th data-value="phone">
                        رقم الهاتف
                    </th>
                    <th data-value="mail">
                        البريد الألكترونى
                    </th>
                    <th data-value="education">
                        اللقب
                    </th>
                    <th data-value="spName" class="filter filterSp">
                        التخصص
                    </th>
                    <th data-value="price" class="filter">
                        سعر الكشف
                    </th>
                    <th>
                        العملية على الحقل
                    </th>
                </tr>
            </thead>
            <tbody class=@string.Concat(ViewBag.controller,"tbody")></tbody>
        </table>
    </div>
</div>
<!--this modal is for viewing doctor details-->
