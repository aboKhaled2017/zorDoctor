 <div class="doc-advices">
    <h3 class="text-center">
        <i class="fa fa-info fa-lg"></i> @Resource1.writeMedicalAdvice
    </h3>
    <div>
        <form class="adviceForm">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="@Resource1.addAdviceInArabicLang" name="adviceContent" id="adviceContent">
            </div>
            <div class="form-group alert alert-success" style="display:none">
                <label>@Resource1.adviceAddedSuccessfully</label>
            </div>
            <div class="form-group">
                <button type="button" class="form-control" onclick="addDoctorAdvice(adviceContent.value)">@Resource1.addAdvice <i class="fa fa-plus"></i></button>
            </div>
        </form>
    </div>
</div>