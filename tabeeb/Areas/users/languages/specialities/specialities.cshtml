@model  List<specialityDescription>
@{
    Page.Title = Resource1.titleSpecialities;
    Layout = Html.getUsersSiteLayout();
}
<!--start specialities section-->
<section id="specialities" class="specialities">
    <h2 class="pageHeadline">@Resource1.Specialities</h2>
    <div class="container-fluid">
        <div class="row">
         @foreach (var speciality in Model)
         {
             <div class="col-md-3  col-sm-4 col-xs-6">
                <div class="speciality">
                    <div class="overlay"></div>
                    <a onclick="getSpecialityDescrip(this,'@speciality.name')" 
                       class="btn btn-primary"><i class="hidden fa fa-circle-o-notch fa-spin"></i> @Resource1.browsing_The_Speciality</a>
                    <img src="~/Areas/users/spImages/@speciality.image" 
                         class="img-responsive img-thumbnail"
                         alt="@speciality.image">
                    <p>@speciality.name</p>
                </div>
            </div>
         }
        </div>
    </div>
</section>
<!--end specialities section-->
<!--strat specialist type-->
<section id="specialityDetails" class="speciality-type specialityCard" style="display:none;">
    <i class="fa fa-close pull-right" onclick="$(this).parent().fadeOut();"></i>
    <h4 class="main-color  pull-left">spname</h4><div class="clearfix"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-xs-6 speciality">
                <img src="" class="img-responsive">
            </div>
            <div class="col-sm-9 col-xs-12 discription">
                <p>
                    spDiscription
                </p>
            </div>
        </div>
    </div>
    <div>
        <a href="/@Html.getDefaultPathFor("users","specialities")/"> </a>
    </div>
</section>
<!--end specialist type-->
