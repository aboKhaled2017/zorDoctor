@model patient
@{
    Page.Title = Resource1.titleProfile;
    Layout = Html.getUsersSiteLayout();
}
@{
    Response.noCachPage();
}
<section id="registerSection" class="register-section">
    <div class="login-section">
        <div class="login-box center-block">
            <h2>@Resource1.manageProfile</h2>
            <div class="login center-block">
                @using (Html.BeginForm("profile", "patient", FormMethod.Post, new { id = "#registerForm" }))
                {
                    @Html.HiddenFor(p=>p.id)                   
                    <div class="form-group">
                        <label>
                            <i class="fa fa-user-o fa-lg"></i> @Resource1.userName <i class="fa fa-star fa-xs"></i>
                        </label>
                        @Html.TextBoxFor(patient => patient.username, new { dataName = Model.username, autocomplete= "off", onblur = "onChangeProfileName(this)",@class="form-control"})
                        @Html.ValidationMessageFor(p => p.username)
                    </div>
                    <div class="form-group">
                        <label>
                            <i class="fa fa-envelope-o fa-lg"></i> @Resource1.mail <i class="fa fa-star fa-xs"></i>
                        </label>
                        @Html.TextBoxFor(patient => patient.mail, new {@class="form-control"})
                        @Html.ValidationMessageFor(p => p.mail)
                    </div>
                    <div class="form-group">
                        <label>
                            <i class="fa fa-mobile fa-lg"></i> @Resource1.phoneNumber <i class="fa fa-star fa-xs"></i>
                        </label>
                        @Html.TextBoxFor(patient => patient.phone, new {@class="form-control"})
                        @Html.ValidationMessageFor(p => p.phone)
                    </div>
                    <div class="form-group">
                        <label>
                            <i class="fa fa-calendar fa-lg"></i> @Resource1.birthDate <i class="fa fa-star fa-xs"></i>
                        </label> 
                        @Html.TextBoxFor(patient => patient.birthDate, new { @Value = Model.birthDate.ToString("yyyy-MM-dd"), type = "date", @class = "form-control" })
                        @Html.ValidationMessageFor(p => p.birthDate)
                    </div>
                    <div class="form-group">
                        <label style="display: block;">
                            <img src="~/icon/type1.png"> @Resource1.gender
                        </label>
                        <label class="radio-inline">
                            @Html.RadioButtonFor(p=>p.type,true) @Resource1.male
                        </label>
                        <label class="radio-inline">
                            @Html.RadioButtonFor(p => p.type, false) @Resource1.female
                        </label>
                        @Html.ValidationMessageFor(p => p.type)
                    </div>
                    <div class="form-group">
                        <label>
                            <i class="fa fa-eye fa-lg"></i> @Resource1.passString <i class="fa fa-star fa-xs"></i>
                        </label>
                        @Html.TextBoxFor(patient => patient.password, new { type = "password", autocomplete = "new-password", @class = "form-control" })
                        @Html.ValidationMessageFor(p => p.password)
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg form-control"><i class="fa fa-send fa-lg"></i> @Resource1.saveData</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
    <script>
        ///<reference path="~/Areas/users/js/mainPage.js" />
        onMainJsLoad = function () {
            loadScripts.then(loadLocalScript("/validationLinks"));
        }
</script>

